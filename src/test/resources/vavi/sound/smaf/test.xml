<project default="run" basedir=".">

  <property file="local.properties" />

  <!-- クラスパスの定義 -->
  <path id="project.class.path">
    <pathelement location="${vavi.dir}" />
    <pathelement location="${vavi.dir}/test/106/src" />
  </path>

  <!-- ターゲットの定義 -->

  <!-- clean -->
  <target name="clean" description="ビルド環境のクリア">
    <delete>
      <fileset dir=".">
        <include name="**/*.class" />
      </fileset>
    </delete>
  </target>

  <!-- compile support -->
  <target name="compile.support" description="コンパイル">
    <ant dir="../mfi" target="compile" inheritall="no" />
    <ant dir="${vavi.dir}/test/106" target="compile" inheritall="no" />
  </target>

  <!-- javac -->
  <target name="compile" depends="compile.support" description="コンパイル">
    <javac debug="on" deprecation="on" encoding="Windows-31J">
      <classpath refid="project.class.path" />
      <include name="**/*.java" />
      <src path="." />
    </javac>
  </target>

  <!-- run -->
  <target name="run" depends="compile" description="Load (only) mmf">
    <java classname="vavi.sound.smaf.SmafFileFormat" fork="yes">
      <classpath>
        <path refid="project.class.path" />
        <pathelement location="." />
      </classpath>
      <arg value="${vavi.sound.smaf.run.smaf_in}" />
    </java>
  </target>

  <!-- t1 -->
  <target name="t1" depends="compile" description="Play mmf">
    <java classname="vavi.sound.smaf.SmafSystem" fork="yes">
      <jvmarg value="-Djavax.sound.midi.Sequencer=${vavi.sound.smaf.sequencer}"/>
      <classpath>
        <path refid="project.class.path" />
        <pathelement location="." />
      </classpath>
      <arg value="-p" />
      <arg value="${vavi.sound.smaf.t1.smaf_in}" />
    </java>
  </target>

  <!-- t2 -->
  <target name="t2" depends="compile" description="Convert smaf to midi">
    <java classname="vavi.sound.smaf.SmafSystem" fork="yes">
      <jvmarg value="-Djavax.sound.midi.Sequencer=${vavi.sound.smaf.sequencer}"/>
<!--
      <jvmarg value="-Xbootclasspath/a:${base.lib}/javassist.jar"/>
      <jvmarg value="-javaagent:${base.lib}/vavi-instrumentation.jar"/>
      <jvmarg value="-Xmx128m" />
      <jvmarg value="-Xprof" />
-->
      <classpath>
        <path refid="project.class.path" />
        <pathelement location="." />
      </classpath>
      <arg value="-c" />
      <arg value="${vavi.sound.smaf.t2.smaf_in}" />
      <arg value="${vavi.sound.smaf.t2.midi_out}" />
    </java>
  </target>

</project>

